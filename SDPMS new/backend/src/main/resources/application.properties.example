# Copy this file to application.properties and set your MySQL password.

# Server
server.port=8080
server.servlet.context-path=/api

# MySQL - UPDATE username and password for your system
spring.datasource.url=jdbc:mysql://localhost:3306/sdpms?useSSL=false&allowPublicKeyRetrieval=true&serverTimezone=UTC&createDatabaseIfNotExist=true
spring.datasource.username=root
spring.datasource.password=YOUR_MYSQL_PASSWORD
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver

# JPA
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=false
spring.jpa.properties.hibernate.format_sql=true
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.MySQLDialect

# JWT
jwt.secret=SDPMS-SecretKeyForJWTTokenGeneration-MustBeLongEnoughForHS256
jwt.expiration=86400000
